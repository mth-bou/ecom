{# templates/product/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Ajouter un produit{% endblock %}

{% block body %}
    <div class="container">
        <div class="new-product">

            {{ form_start(form, {
                'attr': {
                    'class': 'form-control'
                }
            }) }}

            {{ form_row(form.name, {
                'attr': {
                    'class': 'form-control'
                }
            }) }}

            {{ form_row(form.description, {
                'attr': {
                    'class': 'form-control'
                }
            }) }}

            {{ form_row(form.price, {
                'attr': {
                    'class': 'form-control'
                }
            }) }}

            {{ form_row(form.quantity, {
                'attr': {
                    'class': 'form-control'
                }
            }) }}

            {{ form_row(form.image, {
                'attr': {
                    'class': 'form-control'
                }
            }) }}

            <div class="text-center">
                <button type="submit" class="btn btn-primary mt-2 w-25">Ajouter</button>
            </div>

            {{ form_end(form) }}

        </div>
    </div>
{% endblock %}